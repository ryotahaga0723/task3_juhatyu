<p id="notice"><%= notice %></p>

<h1>請求書一覧</h1>

<table>
  <thead>
    <tr>
      <th>請求書番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.code %></td>
        <td><%= link_to '詳細', invoice %></td>
        <td><%= link_to '編集', edit_invoice_path(invoice) %></td>
        <td><%= link_to '削除', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>