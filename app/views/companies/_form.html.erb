<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :企業コード %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :社名 %>
    <%= form.text_field :name %>
  </div>

  <div id="address_forms">
    <%= form.fields_for :address do |form| %>
      <div class="field">
        <%= form.label :郵便番号 %>
        <%= form.number_field :postcode %>
      </div>

      <div class="field">
        <%= form.label :都道府県名 %>
        <%= form.text_field :prefecture %>
      </div>

      <div class="field">
        <%= form.label :市町村名 %>
        <%= form.text_field :city %>
      </div>

      <div class="field">
        <%= form.label :地区名 %>
        <%= form.text_field :town %>
      </div>

      <div class="field">
        <%= form.label :以降住所 %>
        <%= form.text_field :address %>
      </div>

      <div class="field">
        <%= form.label :建物名 %>
        <%= form.text_field :building %>
      </div>

      <div class="field">
        <%= form.label :部屋番号 %>
        <%= form.text_field :room_number %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
