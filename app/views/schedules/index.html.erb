<p id="notice"><%= notice %></p>

<h1>code:<%= @order.code %> スケジュール一覧</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>日付</th>
      <th>何を</th>
      <th>どうする</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td>
        <% if schedule.check_list == "□" %>
          <%= link_to schedule.check_list, update_check_schedule_path(schedule), method: :post %>
        <% else %>
          <%= link_to schedule.check_list, update_noncheck_schedule_path(schedule), method: :post %>
        <% end %>
        </td>
        <td><%= schedule.date %></td>
        <td><%= schedule.what %></td>
        <td><%= schedule.do %></td>
        <td><%= link_to '編集', edit_schedule_path(schedule) %></td>
        <td><%= link_to '削除', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_schedule_path(order: @order) %>
