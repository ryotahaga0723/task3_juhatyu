<section class="section">
  <div class ="section_inner">

    <h1>カテゴリー一覧</h1>

    <p id="notice"><%= notice %></p>

    <table class="osare3-table col4t">
      <thead>
        <tr>
          <th>カテゴリー名</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to '編集', edit_category_path(category) %></td>
            <td><%= link_to '削除', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '新規作成', new_category_path %>
    <%= link_to '在庫一覧', products_path %>
  </div>
</section>
