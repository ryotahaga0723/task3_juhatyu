<p id="notice"><%= notice %></p>

<h1>販売商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品コード</th>
      <th>商品名</th>
      <th>単価</th>
      <th>セット数</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.code %></td>
        <td><%= supply.name %></td>
        <td><%= supply.price %></td>
        <td><%= supply.set %></td>
        <td><%= link_to '詳細', supply %></td>
        <td><%= link_to '編集', edit_supply_path(supply) %></td>
        <td><%= link_to '削除', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

