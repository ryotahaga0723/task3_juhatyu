<section class="section">
  <div class ="section_inner">

    <h1>販売商品一覧</h1>

    <p id="notice"><%= notice %></p>

    <table class="osare3-table col4t">
      <thead>
        <tr>
          <th>商品コード</th>
          <th>商品名</th>
          <th>単価</th>
          <th>セット数</th>
          <th>詳細</th>
          <th>編集</th>
          <th>削除</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @supplies.each do |supply| %>
          <tr>
            <td><%= supply.code %></td>
            <td><%= supply.name %></td>
            <td><%= supply.price %></td>
            <td><%= supply.set %></td>
            <td><%= link_to '詳細', supply %></td>
            <td><%= link_to '編集', edit_supply_path(supply) %></td>
            <td><%= link_to '掲載取り消し', update_cancel_cancel_path(supply), method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <h1>掲載取り消し販売商品一覧</h1>

    <table class="osare3-table col4t">
      <thead>
        <tr>
          <th>商品コード</th>
          <th>商品名</th>
          <th>単価</th>
          <th>セット数</th>
          <th>詳細</th>
          <th>編集</th>
          <th>削除</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @supplies_cancel.each do |supply| %>
          <tr>
            <td><%= supply.code %></td>
            <td><%= supply.name %></td>
            <td><%= supply.price %></td>
            <td><%= supply.set %></td>
            <td><%= link_to '詳細', supply %></td>
            <td><%= link_to '編集', edit_supply_path(supply) %></td>
            <td><%= link_to '掲載開始', update_noncancel_cancel_path(supply), method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <br>

    <%= link_to '新規作成', new_supply_path %>

  </div>
</section>
