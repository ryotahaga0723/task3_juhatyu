<section class="section">
  <div class="section_inner">

    <div class= "title">
      <h1>販売商品詳細</h1>
    </div>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if @supply.product.image.attached? %>
      <div class="image">
        <%= image_tag @supply.product.image, width: "50%" %>
      </div>
    <% end %>


    <table class="osare3-table col4t show">
      <tbody>

        <tr>
          <td>販売商品コード</td>
          <td><%= @supply.code %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= @supply.name %></td>
        </tr>

        <tr>
          <td>単価</td>
          <td><%= @supply.price %></td>
        </tr>

        <tr>
          <td>セット数</td>
          <td><%= @supply.set %></td>
        </tr>

        <tr>
          <td>説明</td>
          <td><%= @supply.content %></td>
        </tr>

      <tbody>
    </table>

    <%= link_to '編集', edit_supply_path(@supply) %> |
    <%= link_to '戻る', supplies_path %>
  </div>
</section>