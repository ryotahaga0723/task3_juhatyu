  <div class="section_inner">

    <div class= "title">
      <h1>販売商品詳細</h1>
    </div>

    <% if @supply.product.image.attached? %>
      <div class="image">
        <%= image_tag @supply.product.image, width: "30%" %>
      </div>
    <% end %>

    <table class="osare3-table col4t show">
      <tbody>

        <tr>
          <td>販売商品コード</td>
          <td><%= @supply.code %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= @supply.name %></td>
        </tr>

        <tr>
          <td>単価</td>
          <td><%= @supply.price %></td>
        </tr>

        <tr>
          <td>セット数</td>
          <td><%= @supply.set %></td>
        </tr>

        <tr>
          <td>説明</td>
          <td><%= @supply.content %></td>
        </tr>

      <tbody>
    </table>

  </div>
